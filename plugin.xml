<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="dita-ot/plugin.rnc" type="application/relax-ng-compact-syntax"?>
<plugin id="fox.jason.passthrough.swagger" version="1.0.0">
	<!--
		This plugin requires Pandoc, the XMLTask lib and the passthrough reader
	-->
	<require plugin="org.doctales.xmltask"/>
	<require plugin="fox.jason.passthrough"/>
	<require plugin="fox.jason.passthrough.pandoc"/>
	<require plugin="fox.jason.prismjs"/>

	<feature extension="dita.conductor.lib.import" file="lib/swagger2markup-cli-1.3.3.jar"/>
	<feature extension="ant.import" file="process_swagger.xml"/>

	<feature extension="fox.jason.prismjs.pre" value="swagger.prismjs.pre"/>
	<feature extension="fox.jason.passthrough.pre" value="swagger.process.pre"/>
	<feature extension="fox.jason.passthrough.process" value="swagger.process"/>

	<!-- PDF -->
	<feature extension="dita.xsl.xslfo" value="xsl/xslfo.xsl" type="file"/>
	<!-- HTML5 extension points -->   
	<feature extension="dita.xsl.html5" value="xsl/xhtml.xsl" type="file"/>
	<!-- XHTML extension points -->
	<feature extension="dita.xsl.xhtml" value="xsl/xhtml.xsl" type="file"/>

	<feature extension="dita.parser">
		<parser format="swagger" class="fox.jason.passthrough.parser.FileReader"/>
	</feature>
</plugin>